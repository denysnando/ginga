          <div class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            <%= flash[:error] %>
          </div>
        <% end %>
  <div class="form-inputs">
    <%= f.input :name, wrapper: :vertical_input_group, hint: "ObrigatÃ³rio", label: false  do %>
    <span class="input-group-addon">Nome</span>
      <%= f.input_field :name, class: "form-control" %>
    <% end %>
  </div>

  <div class="btn-group">
    <%= link_to 'Cancelar', admin_categories_path, class: 'btn btn-default' %>
    <%= f.button :submit, 'Salvar Categoria', class: 'btn btn-primary' %>
  </div>
<% end %>
